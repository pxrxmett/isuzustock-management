# ==================================
# Application Settings (Production - Railway)
# ==================================
NODE_ENV=production
# PORT is automatically set by Railway

# ==================================
# Database Configuration (Railway MySQL)
# ==================================
# Use Railway's service references
DB_HOST=${{MySQL.MYSQL_HOST}}
DB_PORT=${{MySQL.MYSQL_PORT}}
DB_USERNAME=${{MySQL.MYSQL_USER}}
DB_PASSWORD=${{MySQL.MYSQL_PASSWORD}}
DB_DATABASE=stock_management

# ==================================
# JWT Authentication (Production)
# ==================================
# Generate strong secrets with:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_STRONG_SECRET_HERE_64_CHARACTERS_OR_MORE
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_STRONG_SECRET_HERE_64_CHARACTERS_OR_MORE
JWT_REFRESH_EXPIRES_IN=30d

